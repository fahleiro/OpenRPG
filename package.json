{
  "name": "openrpg-backend",
  "version": "1.0.0",
  "description": "Self-hosted, open source backend for RPGs in TypeScript, built as a REST API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "clean": "rimraf dist",
    "docs:install": "npm install -g gitbook-cli",
    "docs:init": "gitbook init",
    "docs:serve": "gitbook serve",
    "docs:build": "gitbook build",
    "docs:publish": "gitbook build && gh-pages -d _book",
    "test:gitbook": "node scripts/test-gitbook-sync.js"
  },
  "keywords": [
    "rpg",
    "backend",
    "api",
    "typescript",
    "express"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.0",
    "@types/nodemailer": "^7.0.1",
    "gh-pages": "^6.0.0",
    "rimraf": "^5.0.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  }
}
